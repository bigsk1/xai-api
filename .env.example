# Required API keys
XAI_API_KEY=your_xai_api_key_here

# Optional: API Base URL (default: https://api.x.ai/v1)
XAI_API_BASE=https://api.x.ai/v1

# Optional: Default models
DEFAULT_CHAT_MODEL=grok-4-1-fast-non-reasoning
DEFAULT_IMAGE_GEN_MODEL=grok-2-image
DEFAULT_VISION_MODEL=grok-2-vision-latest

# Optional: Rate limiting, includes health checks
API_RATE_LIMIT=300
# 3600 is 1 hour
API_RATE_LIMIT_PERIOD=3600

# Optional: Tools configuration (both disabled by default for security)
XAI_TOOLS_ENABLED=true
XAI_NATIVE_TOOLS_ENABLED=true

# Tool validation limits (for client-side function calling when XAI_TOOLS_ENABLED=true)
# MAX_TOOLS_PER_REQUEST=20
# MAX_FUNCTION_NAME_LENGTH=64
# MAX_FUNCTION_DESCRIPTION_LENGTH=1024
# MAX_PARAMETER_DEPTH=5

# Optional: API Authentication (disabled by default)
# When enabled, all API endpoints require token (except /health and optionally docs)
XAI_API_AUTH=false
# Set a secure random token when XAI_API_AUTH=true (e.g., generated with: openssl rand -hex 32)
XAI_API_AUTH_TOKEN=your_secure_random_token_here
# Header to check for token: 
#   "Authorization" = Standard Bearer token (default)
#   "X-API-Token" = Custom header (use this with Traefik BasicAuth to avoid header conflict)
XAI_API_AUTH_HEADER=Authorization
# Exempt documentation endpoints from authentication
#   true = /docs, /redoc, /openapi.json are public (default, good for public APIs or when using Traefik BasicAuth)
#   false = docs require authentication (recommended for private/internal APIs)
XAI_API_AUTH_EXCLUDE_DOCS=true